<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jones.mars.repository.MessageMapper" >
    <insert id="insert" parameterType="Message">
        insert into message(`title`, `content`, `create_time`)
        values(#{title}, #{content}, now())
    </insert>
    <insert id="update" parameterType="Message">
        update message set staus = #{staus}
        where id=#{id}
    </insert>
    <select id="findList" resultType="Message" parameterType="Query">
        <include refid="com.jones.mars.repository.BaseMapper.startPage" />
        select * from message where delete_flg=0
        <if test="receiver != null">
            and receiver = #{receiver}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        order by create_time desc
        <include refid="com.jones.mars.repository.BaseMapper.endPage" />
    </select>
    <select id="findCount" resultType="java.lang.Integer" parameterType="Query">
        select count(*) from message where delete_flg=0
        <if test="receiver != null">
            and receiver = #{receiver}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
    </select>
    <select id="findAll" resultType="Message">
        select * from message order by create_time desc
    </select>
    <select id="findOne" resultType="Message">
        select * from message where id=#{id}
    </select>
    <delete id="delete">
        update message set delete_flg=1 where id=#{id}
    </delete>
</mapper>