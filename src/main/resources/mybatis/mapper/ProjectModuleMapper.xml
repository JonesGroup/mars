<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jones.mars.repository.ProjectModuleMapper" >
    <insert id="insert" parameterType="ProjectModule">
        insert into project_module(`name`, `create_flg`)
        values(#{name}, #{createFlg})
    </insert>
    <insert id="update" parameterType="ProjectModule">
        update project_module set name = #{name}, create_flg=#{createFlg} where id=#{id}
    </insert>
    <select id="findList" resultType="ProjectModule" parameterType="Query">
        <include refid="com.jones.mars.repository.BaseMapper.startPage" />
        select * from project_module
        where delete_flg=0
        <if test="publicFlg != null">
            and public_flg = #{publicFlg}
        </if>
        order by name
        <include refid="com.jones.mars.repository.BaseMapper.endPage" />
    </select>
    <select id="findCount" resultType="java.lang.Integer" parameterType="Query">
        select count(*) from project_module
        where delete_flg=0
        <if test="publicFlg != null">
            and public_flg = #{publicFlg}
        </if>
    </select>
    <select id="findAllName" resultType="java.lang.Object" parameterType="Query">
        select id, name from project_module
        where delete_flg=0
        <if test="publicFlg != null">
            and public_flg = #{publicFlg}
        </if>
        order by name
    </select>
    <select id="findAll" resultType="ProjectModule">
        select * from project_module
        where delete_flg=0
        order by name
    </select>
    <select id="findOne" resultType="ProjectModule">
        select * from project_module where id=#{id}
    </select>
    <update id="delete">
        update project_module set delete_flg=1 where id=#{id}
    </update>
</mapper>