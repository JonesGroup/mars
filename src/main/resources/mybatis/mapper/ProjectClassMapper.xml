<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jones.mars.repository.ProjectClassMapper" >
    <insert id="insert" parameterType="ProjectClass">
        insert into project_class(`name`, `module_id`)
        values(#{name}, #{moduleId})
    </insert>
    <insert id="update" parameterType="ProjectClass">
        update project_class set name = #{name},#{module_id}=#{moduleId} where id=#{id}
    </insert>
    <select id="findList" resultType="ProjectClass" parameterType="Query">
        <include refid="com.jones.mars.repository.BaseMapper.startPage" />
        select * from project_class
        where 1=1
        <if test="moduleId != null">
            and module_id = #{moduleId}
        </if>
        <if test="publicFlg != null">
            and public_flg = #{publicFlg}
        </if>
        order by name
        <include refid="com.jones.mars.repository.BaseMapper.endPage" />
    </select>
    <select id="findCount" resultType="java.lang.Integer" parameterType="Query">
        select count(*) from project_class
        where 1=1
        <if test="moduleId != null">
            and module_id = #{moduleId}
        </if>
        <if test="publicFlg != null">
            and public_flg = #{publicFlg}
        </if>
    </select>
    <select id="findAllName" resultType="java.lang.Object" parameterType="Query">
        select id, name from project_class
        where 1=1
        <if test="moduleId != null">
            and module_id = #{moduleId}
        </if>
        <if test="publicFlg != null">
            and public_flg = #{publicFlg}
        </if>
        order by name
    </select>
    <select id="findAll" resultType="ProjectClass">
        select * from project_class order by name
    </select>
    <select id="findOne" resultType="ProjectClass">
        select * from project_class where id=#{id}
    </select>
    <delete id="delete">
        delete from project_class where id=#{id}
    </delete>
</mapper>